<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/idBotonAtras"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/idBotonGardar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/idBotonAtras"
        android:text="@string/gardar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/idListaFiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/idBotonGardar"
        android:divider="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/barra_listas"/>

</RelativeLayout>